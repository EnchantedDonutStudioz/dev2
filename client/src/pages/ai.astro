---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Bolt AI" proxy={false}>
	<div class="background-gradient"></div>

	<main class="w-screen h-screen flex items-center justify-center p-4">
		<section
			class="w-full max-w-2xl h-[85vh] bg-white/80 backdrop-blur border rounded-xl shadow flex flex-col">
			<header class="p-4 border-b flex items-center justify-between">
				<h1 class="font-black text-xl">Bolt AI</h1>
				<div class="flex items-center gap-2">
					<button
						id="clear-btn"
						class="px-3 py-1.5 text-sm border rounded hover:bg-gray-50">
						Clear
					</button>
				</div>
			</header>

			<ul id="messages" class="flex-1 overflow-y-auto p-4 space-y-3"></ul>

			<form
				id="chat-form"
				class="border-t p-3 grid grid-cols-[1fr_auto] gap-2">
				<input
					id="chat-input"
					type="text"
					placeholder="Type a message and press Enter..."
					class="border rounded px-3 py-2 focus:outline-none focus:ring w-full"
					autocomplete="off"
				/>
				<button
					id="send-btn"
					class="px-4 py-2 bg-black text-white rounded hover:bg-gray-800"
					type="submit">
					Send
				</button>
			</form>
		</section>
	</main>
</Layout>
